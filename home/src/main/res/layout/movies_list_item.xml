<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_movie_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/base_grid"
    android:layout_marginBottom="@dimen/base_grid"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageview_movie_banner"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:paddingTop="@dimen/half_grid"
        android:paddingBottom="@dimen/half_grid" />

    <TextView
        android:id="@+id/textview_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_marginStart="@dimen/double_grid"
        android:layout_marginTop="@dimen/base_grid"
        android:layout_marginEnd="@dimen/double_grid"
        android:fontFamily="@font/poppins"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_H4"
        tools:text="Titulo filme" />
</LinearLayout>