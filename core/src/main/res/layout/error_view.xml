<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container_error_view"
    android:background="@color/app_background">

    <TextView
        android:id="@+id/textview_error_message"
        android:layout_width="@dimen/zero_grid"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/double_grid"
        android:layout_marginEnd="@dimen/double_grid"
        android:fontFamily="@font/poppins"
        android:text="@string/movies_list_error_text"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_H0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <Button
        android:id="@+id/button_error_try_again"
        android:layout_width="@dimen/zero_grid"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/quad_grid"
        android:layout_marginTop="@dimen/base_grid"
        android:layout_marginEnd="@dimen/quad_grid"
        android:background="@drawable/error_button_background"
        android:text="@string/movies_list_error_button_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_error_message" />
</androidx.constraintlayout.widget.ConstraintLayout>